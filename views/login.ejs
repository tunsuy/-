      <div class="form-group">
          <label class="col-sm-2 control-label" for="ds_host">服务器IP</label>
          <div class="col-sm-4">
            <input class="form-control" name="serverIP" id="serverIP" type="text" placeholder="" value="<%= global.reqServerIP %>" required="required" maxlength="15" onkeydown="limitIP();"/>

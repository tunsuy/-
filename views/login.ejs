      </div>

      <div class="form-group">
          <label class="col-sm-2 control-label" for="ds_name">密码</label>
          <div class="col-sm-4">
             <input class="form-control" name="pwd" id="pwd" type="password" placeholder="" value="<%= global.reqPwd %>" required="required"/>
          </div>
      </div>

      <div class="form-group">
          <label class="col-sm-4 control-label text-warning" for="ds_name"><%=errInfo %></label>
          
      </div>

      <div class="form-group">
          <div class="col-sm-2"></div>
          <div class="col-sm-3">
            <input class="btn btn-primary btn-lg" role="button" type="button" value="登录阿里云" onclick="window.location.href='./index?id=aly'" />
          </div>
          <div class="col-sm-7">
            <input class="btn btn-primary btn-lg" role="button" type="submit" value="确定" />
          </div>
      </div>


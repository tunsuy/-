
<% include header.ejs %>
<% include helper/validator.ejs %>

<div class="container-fluid" id="container">
    <div class="row">

        <% include left.ejs %>

        <div class="col-md-9">
            <div class="col-md-9">
                
                <% if(account == ""){ %>
                <form class="form-horizontal" role="form" id="serverForm" name="serverForm" action="./workFlowed" method="post">

                    <fieldset>
                      <legend>用户信息</legend>

                      <div class="form-group">
                          <label class="col-sm-2 control-label" for="ds_host">手机号码</label>
                          <div class="col-sm-4">
                            <input class="form-control" name="account" id="account" type="text" placeholder="" value="<%= global.accountCache %>" required="required" maxlength="11" onkeydown="limitPhone();"/>
                          </div>
                      </div>

                      <legend>查询条件</legend>

                      <!-- <div class="form-group">
                          <label class="col-sm-12 control-label" for="ds_host">
                            <p class="text-left">想要查看考勤的时间段：格式-"20150721"</p>
                          </label>
                      </div> -->

                      <div class="form-group">
                          <div class="col-sm-2 checkboxThree">
                            <input class="form-control" name="applying" id="applying" type="checkbox">
                            <label for="applying"></label>
                          </div>
                          <label class="col-sm-3 control-label" for="ds_host">处理中的流程</label>
                      </div>

                      <div class="form-group">
                          <div class="col-sm-2 checkboxThree">
                            <input class="form-control" name="rejected" id="rejected" type="checkbox">
                            <label for="rejected"></label>
                          </div>
                          <label class="col-sm-3 control-label" for="ds_host">被驳回的流程</label>
                      </div>

                      <div class="form-group">
                          <div class="col-sm-2 checkboxThree">
                            <input class="form-control" name="handling" id="handling" type="checkbox">
                            <label for="handling"></label>
                          </div>
                          <label class="col-sm-3 control-label" for="ds_host">待审批的流程</label>
                      </div>

                      <div class="form-group">
                          <div class="col-sm-2 checkboxThree">
                            <input class="form-control" name="handled" id="handled" type="checkbox">
                            <label for="handled"></label>
                          </div>
                          <label class="col-sm-3 control-label" for="ds_host">已审批的流程</label>
                      </div>

                      <div class="form-group">
                          <div class="col-sm-2 checkboxThree">
                            <input class="form-control" name="copyme" id="copyme" type="checkbox">
                            <label for="copyme"></label>
                          </div>
                          <label class="col-sm-3 control-label" for="ds_host">抄送我的流程</label>
                      </div>

                       <div class="form-group">
                          <div class="col-sm-4"></div>
                          <div class="col-sm-8">
                            <input class="btn btn-primary btn-lg" role="button" type="submit" value="确定" />
                          </div>
                      </div>

                      <div class="form-group">
                          <label class="col-sm-12 control-label" for="ds_host">
                            <p class="text-left text-success">PS：可任意组合选择想要显示的信息</p>
                          </label>
                      </div>

                      <div class="form-group">
                          <label class="col-sm-12 control-label" for="ds_host">
                            <p class="text-left text-warning">注：流程模块需要服务器支持MySQLdb环境，如果不支持请联系ts配置</p>
                          </label>
                      </div>

                    <fieldset>

                </form>
                <% }else{ %>
                    <pre><%=content %></pre>
                <% } %>
               
            </div>
            
            <div class="col-md-3">
                <p class="text-info">当前登录的服务器为：</p>
                <p class="text-success"><%= serverIP %></p>
                <p><a class="btn btn-primary btn-lg" href="./" role="button">切换服务器</a></p>
                <p></p>

                <% if(account != ""){ %>
                    <p class="text-info">当前查询的手机号为：</p>
                    <p class="text-success"><%= account %></p>
                    <p><a class="btn btn-primary btn-lg" href="./workFlowed" role="button">更换手机号</a></p>
                <% } %>
            </div>

        </div>
    </div>
</div>

<% include footer.ejs %>



<% include header.ejs %>

<div class="container-fluid">
    <div class="row">

        <% include left.ejs %>

        <div class="col-md-9">
            <div class="col-md-9">
                <% if(account == ""){ %>
                    <form class="form-horizontal" role="form" id="serverForm" name="serverForm" action="./push" method="post">
                        <fieldset>
                          <legend>基础工具</legend>

                          <div class="form-group">
                              <label class="col-sm-2 control-label" for="ds_host">解析keycode de编码的内容</label>
                              <div class="col-sm-4">
                                <input class="form-control" name="account" id="account" type="text" placeholder="" required="required"/>
                              </div>
                          </div>
                          <div class="form-group">
                              <div class="col-sm-4"></div>
                              <div class="col-sm-8">
                                <input class="btn btn-primary btn-lg" role="button" type="submit" value="确定" />
                              </div>
                          </div>

                        <fieldset>

                    </form>
                <% }else{ %>
                    <pre><%=content %></pre>
                <% } %>
            </div>
            
            <div class="col-md-3">
                <p class="text-info">当前登录的服务器为：</p>
                <p class="text-success"><%= serverIP %></p>
                <p><a class="btn btn-primary btn-lg" href="./" role="button">切换服务器</a></p>
                <p></p>

                <% if(account != ""){ %>
                    <p class="text-info">当前查询的手机号为：</p>
                    <p class="text-success"><%= account %></p>
                    <p><a class="btn btn-primary btn-lg" href="./push?id=<%= serverIP %>" role="button">更换手机号</a></p>
                <% } %>
            </div>

        </div>
    </div>
</div>

<% include footer.ejs %>

